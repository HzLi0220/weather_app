.weather-wrapper {
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx; /* general standard: 1.4 * font */
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-bg {
  position: absolute; /* absolutely relative to its parent */
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  z-index: -1;
}

